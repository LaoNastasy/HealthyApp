<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imghexagon"
        android:layout_width="140dp"
        android:layout_height="212dp"
        android:layout_gravity="end"
        android:src="@drawable/hexagone1" />


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/hexagone2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="125dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="start"
            android:text="@string/registration_title"
            android:textColor="#fefefe"
            android:textSize="31.3sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="52.7dp"
            android:text="@string/auth_login"
            android:textColor="#fefefe"
            android:textSize="13.3sp" />

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="15sp" />

        <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="37.3dp"
            android:text="@string/auth_password"
            android:textColor="#fefefe"
            android:textSize="13.3sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="37.3dp"
            android:text="@string/password_repeat"
            android:textColor="#fefefe"
            android:textSize="13.3sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_repeated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:inputType="textPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="#FFFFFF"
                android:textColorHint="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="263.7dp"
            android:layout_height="1dp"
            android:layout_gravity="start"
            android:layout_marginTop="6.3dp"
            android:background="#f2f2f3" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/registrate"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/white_hexagone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="18dp"
            android:layout_height="15.3dp"
            android:layout_gravity="center"
            android:src="@drawable/right_arrow" />


    </FrameLayout>


</FrameLayout>

